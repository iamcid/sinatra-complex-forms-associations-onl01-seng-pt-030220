<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  Name:<input type="text" name="owner[name]" id="owner_name">

  <h3>Existing Pets</h3>
  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id %>" value="<%= pet.id %>"><%= pet.name %><br>
  <% end %>
  <br>

  <h3>New Pet</h3>
  Pet Name:<input type="text" name="pet[name]" id="pet_name"></input>
  <br><br>

  <input type="submit" value="Create Owner">
</form>
